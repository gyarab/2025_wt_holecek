{
  "manifest_version": 2,
  "name": "Password Wallet Demo",
  "version": "1.5",
  "description": "Jednoduchá peněženka hesel s funkcí autofill.",
  "icons": {
    "48": "icons/icon_demo.png",
    "96": "icons/icon_demo.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon_demo.png"
    },
    "default_title": "Password Wallet",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "<all_urls>", "clipboardWrite"]
}
