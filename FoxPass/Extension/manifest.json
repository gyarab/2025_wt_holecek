{
  "manifest_version": 3,
  "name": "FoxPass Pro",
  "version": "2.0",
  "browser_specific_settings": { 
    "gecko": {
      "id": "foxpass-pro-project@tvoje-id", 
      "strict_min_version": "109.0",
      "data_collection_permissions": {
         "required": ["none"]
      }
    }
  },
  "description": "Správce hesel s chytrým autofillem.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [ 
    "https://*.supabase.co/*",
    "<all_urls>"
  ],
  "background": { 
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "96": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
